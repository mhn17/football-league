// addMatchDayModal
div(class="modal fade" id="addMatchDayModal" tabindex="-1" role="dialog")
	div(class="modal-dialog" role="document")
		div.modal-content
			div.modal-header
				button(type="button" class="close" data-dismiss="modal" aria-label="Close")
					span(aria-hidden="true")&times;
				h4.modal-title#myModalLabel Spieltag hinzufügen
			div.modal-body
				form#addMatchDayForm
					.form-group
						label.control-label(for="number") Nummer
						input#matchDay-number.form-control(name="number" type="number" min="1" max="100" step="1")
					.form-group
						label.control-label(for="dateFrom") Von
						input#matchDay-dateFrom.form-control(name="dateFrom" type="date")
					.form-group
						label.control-label(for="dateTo") Bis
						input#matchDay-dateTo.form-control(name="dateTo" type="date")
			div.modal-footer
				button(type="button" class="btn btn-default" data-dismiss="modal") Schließen
				button#submitAddMatchDay(type="button" class="btn btn-success") Speichern