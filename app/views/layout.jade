doctype html
html

	head
		title #{title}

		<!-- Bootstrap Core CSS -->
		link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
		
		<!-- Custom CSS -->
		link(rel='stylesheet', href='/stylesheets/scrolling-nav.css')
		link(rel='stylesheet', href='/stylesheets/style.css')

	body#page-top(data-spy="scroll" data-target=".navbar-fixed-top")
		
		<!-- Navigation -->
		nav#menu.navbar.navbar-default.navbar-fixed-top(role="navigation")
			.container
				.navbar-header.page-scroll
					button(type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse	")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href="#page-top") #{title}
				.navbar-collapse.collapse.navbar-ex1-collapse
					ul.nav.navbar-nav.navbar-right.navstyle
						li.hidden
							a.page-scroll(href="#page-top")
						li
							a.page-scroll(href="#table") Tabelle
						li
							a.page-scroll(href="#match-days") Spieltage
						li
							a.page-scroll(href="#teams") Teams

		#messageWrapper

		block content

		include includes/modals

		<!-- jQuery -->
		script(src='/javascripts/jquery.min.js')

		<!-- Bootstrap Core JavaScript -->
		script(src='/javascripts/bootstrap.min.js')

		<!-- Scrolling Nav JavaScript -->
		script(src="/javascripts/jquery.easing.min.js")
		script(src="/javascripts/scrolling-nav.js")
		
		<!-- Date Formatting -->
		script(src='/javascripts/jquery-dateFormat.min.js')

		<!-- Custom JavaScript -->
		script(src='/javascripts/global.js')
